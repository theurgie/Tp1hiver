//selection de membre par code
    private void btnTrouverActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnTrouverActionPerformed

        Connection connexion = null;
        PreparedStatement stmt = null;

        try {

            connexion = ConfigDB.getConnection("/control/connexion");
            stmt = connexion.prepareStatement("SELECT CODEMEMBRE, nom, prenom from membres where CODEMEMBRE = ?");

            stmt.setInt(1, Integer.parseInt(txtCode.getText()));
            ResultSet rset = stmt.executeQuery();
            liste = new ArrayList<Membres>();

            System.out.println("");
            System.out.println("Data Membre: ");
            while (rset.next()) {
                Membres membre = new Membres(rset.getInt(1), rset.getString(2), rset.getString(3));
                System.out.println("");
                System.out.println("Code Membre: " + rset.getString(1) + " Nom: " + rset.getString(2) + " Prenom: " + rset.getString(3));
                liste.add(membre);
            }
            dataBinding(liste);
        } catch (IOException ex) {
            Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
            System.out.println(" Erreur aucun membre avec le code utiliser");
        } catch (SQLException ex) {
            Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
        } finally {
            if (stmt != null) {
                try {
                    stmt.close();
                } catch (SQLException ex) {
                    Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
                }
            }
        }
        if (connexion != null) {
            try {
                connexion.close();
            } catch (SQLException ex) {
                Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
            }
        }

        JOptionPane.showMessageDialog(null, "Complete", "Message", JOptionPane.INFORMATION_MESSAGE);

    }//GEN-LAST:event_btnTrouverActionPerformed

    private void btnRetourActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnRetourActionPerformed
