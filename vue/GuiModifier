    private void btnModifierActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnModifierActionPerformed
        Connection connexion = null;
        CallableStatement st = null;

        try {
            /* conn = DriverManager.getConnection("jdbc:oracle:thin:@192.168.0.15:1521:ORCL",
             "hr", "hr");*/
            connexion = ConfigDB.getConnection("/control/connexion");

            connexion.setAutoCommit(false);
            //Ecrire
            st = connexion.prepareCall("{call update_membres(?,?)} ");

            st.setString(1, txtCode.getText().toString());
            st.setString(2, comboStatus.getSelectedItem().toString());
            st.executeQuery();
        } catch (IOException ex) {
            Logger.getLogger(GuiModifier.class.getName()).log(Level.SEVERE, null, ex);
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(GuiModifier.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SQLException ex) {
            Logger.getLogger(GuiModifier.class.getName()).log(Level.SEVERE, null, ex);


//	conn.commit();

        } finally {
            if (st != null) {
                try {
                    st.close();
                } catch (SQLException ex) {
                    Logger.getLogger(GuiModifier.class.getName()).log(Level.SEVERE, null, ex);
                }
            }
            if (connexion != null) {
                try {
                    connexion.close();
                } catch (SQLException ex) {
                    Logger.getLogger(GuiModifier.class.getName()).log(Level.SEVERE, null, ex);
                }
            }
            JOptionPane.showMessageDialog(null, "Modified", "Message", JOptionPane.INFORMATION_MESSAGE);
        }
    }//GEN-LAST:event_btnModifierActionPerformed

