//insertion d'un membre
    private void btnAjouterActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAjouterActionPerformed
        try {

            Connection connexion = ConfigDB.getConnection("/control/connexion");
            PreparedStatement stmt = connexion.prepareStatement("Insert into membres values(?, ?, ?, ?, ?, ?) ");


            stmt.setInt(1, Integer.parseInt(txtCode.getText()));
            stmt.setString(2, txtNom.getText());
            stmt.setString(3, txtPrenom.getText());
            stmt.setString(4, txtAdresse.getText());
            stmt.setString(5, comboStatus.getSelectedItem().toString());
            stmt.setDouble(6, Double.parseDouble(txtRevenueAnnuel.getText()));

            stmt.executeUpdate();

            JOptionPane.showMessageDialog(null, " Inserted", "Message", JOptionPane.INFORMATION_MESSAGE);
        } catch (IOException ex) {
            Logger.getLogger(GuiAjouterMembre.class.getName()).log(Level.SEVERE, null, ex);
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(GuiAjouterMembre.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SQLException ex) {
            Logger.getLogger(GuiAjouterMembre.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_btnAjouterActionPerformed

    private void btnRetourActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnRetourActionPerformed
        this.dispose();
    }//GEN-LAST:event_btnRetourActionPerformed
//vider les champs
    private void btnEffacerActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnEffacerActionPerformed
        txtCode.setText("");
        txtNom.setText("");
        txtPrenom.setText("");
        txtAdresse.setText("");
        txtRevenueAnnuel.setText("");
    }//GEN-LAST:event_btnEffacerActionPerformed
