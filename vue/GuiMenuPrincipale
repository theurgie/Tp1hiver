    //faire un statement simple et l'affiche dans le GuiTableauMembres
    private void menuToGuiTabMembresActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_menuToGuiTabMembresActionPerformed
        Connection connexion = null;
        Statement stmt = null;
        try {

            connexion = ConfigDB.getConnection("/control/connexion");
            stmt = connexion.createStatement();
            ResultSet rset = stmt.executeQuery("SELECT CODEMEMBRE, nom, prenom from membres");

            System.out.println("Liste Membres");



            while (rset.next()) {
                Membres membres = new Membres(rset.getInt(1), rset.getString(2), rset.getString(3));
                System.out.println("");
                System.out.println("Code Membre: " + rset.getString(1) + " Nom: " + rset.getString(2) + " Prenom: " + rset.getString(3));
                liste.add(membres);
            }

        } catch (IOException ex) {
            Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SQLException ex) {
            Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
        } finally {
            if (stmt != null) {
                try {
                    stmt.close();
                } catch (SQLException ex) {
                    Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
                }
            }
        }
        if (connexion != null) {
            try {
                connexion.close();
            } catch (SQLException ex) {
                Logger.getLogger(GuiMenuPrincipale.class.getName()).log(Level.SEVERE, null, ex);
            }
        }

        new GuiTableauMembres(liste).setVisible(true);
    }//GEN-LAST:event_menuToGuiTabMembresActionPerformed

